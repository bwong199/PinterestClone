

<div class="col-md-6 col-md-offset-3">
<h1>New Form</h1>

	<% if @pin.errors.any? %> 
		<div id="errors">
			<h2><%= pluralize(@pin.errors.count, "error") %> prevented this post from saving</h2>
			<ul>
				<% @pin.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %> 
	
<%= form_for @pin, :url => pins_path, :html => {:multipart => true} do |f| %>
  <%= f.label :image %>
  <%= f.file_field :image ,class:"form-control"%>
  <%= f.label :title %>
  <%= f.text_field :title ,class:"form-control"%>
  <%= f.label :description %>
  <%= f.text_field :description ,class:"form-control"%>

  <%= f.submit :submit, class:"btn btn-primary" %>
<% end %>


<a href="/">Back</a>
</div>